{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"lib": [
			"esnext"
		],
		"strict": false,
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@api/*": [
				"api/*"
			],
			"@components/*": [
				"components/*"
			],
			"@public/*": [
				"public/*"
			],
			"@utils/*": [
				"utils/*"
			],
			"@tests/*": [
				"tests/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
    "next-env.d.ts",
	],
	"exclude": [
		"node_modues",
		"out",
		".next",
		"public/storybook",
	]
}
